<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blackly">

    <!--	Contenido	Principal	(Main	content	View)	-->
    <FrameLayout
        android:id="@+id/contenedor_fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


    </FrameLayout>

    <!--	MenÃº	Lateral	(Navigation	drawer)	-->
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="290dp"
        android:id="@+id/panel_drawer"
        android:layout_height="fill_parent"
        android:background="@color/redly"
        android:layout_gravity="start"
        android:orientation="vertical">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:id="@+id/home_drawer"></LinearLayout>

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_gravity="bottom">

            <ImageView
                android:layout_width="fill_parent"
                android:layout_height="110dp"
                android:id="@+id/imageView"
                android:background="@color/blackly"
                android:baselineAlignBottom="false"
                android:layout_gravity="bottom"
                android:layout_alignParentBottom="true"
                android:src="@drawable/upv_logo_blanco_transp"
                android:adjustViewBounds="true" />
        </RelativeLayout>

    </LinearLayout>


</android.support.v4.widget.DrawerLayout>