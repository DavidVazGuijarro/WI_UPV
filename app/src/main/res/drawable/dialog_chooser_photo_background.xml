<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:top="0dp"
        android:bottom="0dp">
        <shape android:shape="rectangle">
            <gradient
                android:angle="270"
                android:startColor="#ff9d1b1b"
                android:endColor="#ffc9000f"
                android:gradientRadius="180" />
            <corners android:radius="5dp" />
        </shape>
    </item>
    <item>
        <shape
            android:shape="rectangle"
            android:top="-2dp"
            android:right="-2dp"
            android:left="-2dp">
            <gradient
                android:angle="90"
                android:centerColor="#00FF0000"
                android:centerY="0.9"
                android:endColor="#00FF0000"
                android:startColor="#99000000"
                android:type="linear" />

            <stroke
                android:width="2dp"
                android:color="#ff7f9491" />
            <corners android:radius="5dp" />


        </shape>
    </item>

</layer-list>
