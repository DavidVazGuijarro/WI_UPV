<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="#222">


    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent">

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/UPV_map"
                android:id="@+id/btn_upvmap"
                android:background="@drawable/button_background_states_maps"
                style="@style/ShadowText"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/valenbisi_map"
                android:id="@+id/btn_valenbisi"
                android:background="@drawable/button_background_states_maps_valenbisi"
                style="@style/ShadowText"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/metro_map"
                android:id="@+id/btn_metro"
                android:background="@drawable/button_background_states_maps_metro"
                style="@style/ShadowText"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/interes_map"
                android:id="@+id/btn_interes"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/ShadowText"
                android:background="@drawable/button_background_states_maps_interes"
                android:layout_margin="10dp" />

            <Button
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:text="@string/emt_map"
                android:id="@+id/btn_emt"
                android:textColor="@color/text"
                android:textSize="20sp"
                android:textStyle="bold"
                style="@style/ShadowText"
                android:background="@drawable/button_background_states_maps_metro"
                android:layout_margin="10dp" />

        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/divisor"
        android:id="@+id/imageView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp">

        <TextView
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:text="@string/selecInfo"
            android:id="@+id/textView2"
            android:textColor="#FEFEFE"
            android:layout_gravity="center_horizontal" />

        <Spinner
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/spinnerEdificios"
            android:layout_gravity="right"
            android:background="#FEFEFE"
            android:layout_margin="10dp" />

        <Button
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            style="@style/ShadowText"
            android:text="@string/encontrarEdificio"
            android:id="@+id/btn_enc"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:textStyle="bold"
            android:background="@drawable/button_background_states"
            android:layout_margin="10dp" />

    </LinearLayout>

</LinearLayout>