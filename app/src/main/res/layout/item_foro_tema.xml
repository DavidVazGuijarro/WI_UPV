<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@drawable/background_progressdialog">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="2dp"
        android:background="@drawable/abc_list_selector_holo_light"
        android:id="@+id/layout_item">

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_titulo"
                android:layout_weight="1"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_alignParentTop="true"
                android:layout_marginTop="0dp"
                android:textStyle="bold"
                android:textColor="#f14440"
                android:textSize="15dp"
                android:singleLine="true"
                android:layout_marginRight="25dp" />

            <ImageView
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:id="@+id/iv_flag"
                android:layout_weight="1"
                android:layout_gravity="right"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_marginTop="2dp"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="8dp"
                android:src="@drawable/en"
                android:background="@android:color/transparent" />
        </RelativeLayout>

        <RelativeLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_descripcion"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="8dp"
                android:layout_alignParentTop="true"
                android:textSize="11dp"
                android:layout_marginBottom="8dp"
                android:layout_marginRight="30dp" />

            <RelativeLayout
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentLeft="false"
                android:layout_alignParentTop="false"
                android:layout_alignParentEnd="true"
                android:layout_marginRight="5dp"
                android:background="@drawable/bubble_num_messages"
                android:layout_centerVertical="true">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:id="@+id/tv_numcoments"
                    android:layout_centerInParent="true"
                    android:paddingBottom="5dp"
                    android:textColor="#eeede9"
                    android:textSize="12dp" />
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginTop="3dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/por"
                android:id="@+id/textView3"
                android:layout_marginLeft="5dp"
                android:textSize="9dp"
                android:textStyle="italic"
                android:textColor="#a29f9b" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_nombreUsuario"
                android:layout_marginLeft="5dp"
                android:textSize="9dp"
                android:textColor="#8a878a" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="New Text"
                android:id="@+id/tv_fechaCreacion"
                android:textSize="9dp"
                android:layout_marginLeft="5dp"
                android:textColor="#a29f9b" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>