<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/abs__list_selector_holo_light">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/ic_action_location_web_site"
        android:layout_gravity="center"
        android:paddingLeft="20dp"
        android:paddingTop="20dp"
        android:paddingBottom="20dp" />

    <Spinner
        android:id="@+id/options_lenguage_spinner"
        android:layout_width="wrap_content"
        android:layout_weight="10"
        android:background="@drawable/spinner_background_holo_light"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center"
        android:layout_marginRight="15dp" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:layout_marginRight="20dp"
        android:id="@+id/btn_accept"
        android:src="@drawable/ic_action_navigation_accept"
        android:background="@android:color/transparent"
        android:layout_gravity="center"
        android:visibility="gone" />

</LinearLayout>